<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="8dp"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_payment"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="0dp"
        android:orientation="vertical"
        app:cardBackgroundColor="@color/tvRecharge_color">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="8dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/idAmount_of_utts"
                style="@style/textpattern"
                android:layout_marginTop="30dp"
                android:textSize="20sp"
                android:text="900 UTT"
                />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_paymentDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="5dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="8dp"
            android:orientation="vertical"
            android:layout_marginTop="10dp">


            <TextView
                android:id="@+id/bank_number"
                style="@style/textpattern"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/maven_pro"
                android:text="Número"
                android:textColor="@android:color/black"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                />

            <TextView
                android:id="@+id/id_mobile_operator"
                style="@style/textpattern"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/maven_pro"
                android:text="XXX XXX XXX"
                android:textColor="@android:color/black"
                android:layout_below="@+id/bank_account"

                android:layout_marginTop="4dp"
               android:layout_alignParentStart="true"
                android:layout_marginStart="150dp"
                />

            <TextView
                android:id="@+id/recharge_code"
                style="@style/textpattern"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/maven_pro"
                android:text="@string/recharge_code"
                android:textColor="@android:color/black"
                android:layout_below="@+id/bank_number" />
            <TextView
                android:id="@+id/id_recharge_code"
                style="@style/pattern_tv"
                android:fontFamily="@font/maven_pro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="1111111222"
                android:textColor="@android:color/black"
                android:layout_below="@+id/bank_number"
                android:layout_marginTop="4dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="150dp"
                />



            <TextView
                android:id="@+id/recharge_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preço da Recarga"
                android:fontFamily="@font/maven_pro"
                style="@style/textpattern"
                android:layout_below="@+id/id_recharge_code"
                android:textColor="@android:color/black"
                android:layout_marginTop="4dp"
                android:layout_marginStart="16dp" />

            <TextView
                android:id="@+id/idrecharge_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="900 kz"
                style="@style/textpattern"
                android:fontFamily="@font/maven_pro"
                android:textColor="@android:color/black"
                android:layout_marginTop="4dp"
                android:layout_marginStart="150dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/id_recharge_code"
                />

            <TextView
                android:id="@+id/validaty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Validade"
                android:fontFamily="@font/maven_pro"
                style="@style/textpattern"
                android:layout_below="@+id/recharge_price"
                android:textColor="@android:color/black"
                android:layout_marginTop="4dp"
                android:layout_marginStart="16dp"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/idValidaty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30 dias"
                style="@style/textpattern"
                android:fontFamily="@font/maven_pro"
                android:textColor="@android:color/black"
                android:layout_marginTop="4dp"
                android:layout_marginStart="150dp"
                android:layout_below="@+id/idrecharge_price"
                android:layout_alignParentStart="true"
                />

            <TextView
                android:id="@+id/mobile_operator_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Operadora Móvel"
                android:fontFamily="@font/maven_pro"
                style="@style/textpattern"
                android:layout_below="@+id/idValidaty"
                android:textColor="@android:color/black"
                android:layout_marginTop="4dp"
                android:layout_marginStart="16dp" />

            <TextView
                android:id="@+id/id_mobile_operator_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30 dias"
                style="@style/textpattern"
                android:fontFamily="@font/maven_pro"
                android:textColor="@android:color/black"
                android:layout_marginTop="4dp"
                android:layout_below="@+id/idValidaty"
                android:layout_marginStart="150dp"
                android:layout_alignParentStart="true"
                />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24/09/1996"
                style="@style/textpattern"
                android:fontFamily="@font/maven_pro"
                android:layout_below="@+id/id_mobile_operator_type"
                android:textColor="@android:color/black"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>